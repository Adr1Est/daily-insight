generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas = ["daily_insight"]
}

model Insight {
  id        Int      @id @default(autoincrement())
  data      String 
  day       Int
  month     String
  year      Int
  createdAt DateTime @default(now())

  @@schema("daily_insight")
}
